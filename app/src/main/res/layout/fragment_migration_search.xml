<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="迁移搜索"
            android:textColor="#404040"
            android:textSize="36pt"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="36pt"
            android:text="取消"
            android:textColor="#404040"
            android:textSize="30pt"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84pt"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="34pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24pt"
            android:gravity="center"
            android:text="迁移天数"
            android:textColor="#404040"
            android:textSize="30pt"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="213pt"
            android:gravity="center_vertical"
            android:text="请选择查看天数"
            android:textColor="#D8D8D8"
            android:textSize="30pt"
            />
        <ImageView
            android:layout_width="20pt"
            android:layout_height="14pt"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28pt"
            android:src="@mipmap/down"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_one_day"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="84pt"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24pt"
            android:gravity="center"
            android:text="时间"
            android:textColor="#404040"
            android:textSize="30pt"/>
        <TextView
            android:id="@+id/tv_one_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="213pt"
            android:gravity="center_vertical"
            android:text="请选择时间"
            android:textColor="#D8D8D8"
            android:textSize="30pt"
            />
        <ImageView
            android:layout_width="20pt"
            android:layout_height="14pt"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28pt"
            android:src="@mipmap/down"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_two_day"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="24pt"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="#404040"
                android:textSize="30pt"/>
            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="213pt"
                android:gravity="center_vertical"
                android:text="请选择时间"
                android:textColor="#D8D8D8"
                android:textSize="30pt"
                />
            <ImageView
                android:layout_width="20pt"
                android:layout_height="14pt"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28pt"
                android:src="@mipmap/down"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="24pt"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="#404040"
                android:textSize="30pt"/>
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="213pt"
                android:gravity="center_vertical"
                android:text="请选择时间"
                android:textColor="#D8D8D8"
                android:textSize="30pt"
                />
            <ImageView
                android:layout_width="20pt"
                android:layout_height="14pt"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28pt"
                android:src="@mipmap/down"/>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="569pt"
        android:layout_height="72pt"
        android:layout_marginTop="73pt"
        android:background="#5EBEFF"
        android:layout_gravity="center_horizontal"
        android:text="迁移搜索"
        android:textColor="#ffffff"
        android:textSize="34pt"
        />

</LinearLayout>