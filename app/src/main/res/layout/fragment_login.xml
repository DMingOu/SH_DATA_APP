<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
          xmlns:android = "http://schemas.android.com/apk/res/android"
          android:layout_width = "match_parent"
          android:layout_height = "match_parent"
          android:background="@color/white">
         
          <ImageView
          android:id = "@+id/iv_logo_login"
          android:contentDescription="登录页Logo"
          android:layout_width = "357pt"
          android:layout_height = "125pt"
          android:src="@mipmap/icon_logo_login"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="201pt"
          />

          <View
          android:layout_width = "616pt"
          android:layout_height = "441pt"
          android:background="@mipmap/bg_left_down_login"
          android:layout_alignParentStart="true"
          android:layout_alignParentBottom="true"
          />

          <View
          android:layout_width = "194pt"
          android:layout_height = "329pt"
          android:background="@mipmap/bg_right_top_login"
          android:layout_alignParentEnd="true"
          android:layout_alignParentTop="true"
          />

          <EditText
          android:id = "@+id/et_account_login"
          android:layout_width = "511pt"
          android:layout_height = "90pt"
          android:layout_below="@id/iv_logo_login"
          android:layout_marginTop="87pt"
          android:layout_centerHorizontal="true"
          android:hint="@string/account_number"
          android:textSize="30pt"
          android:drawableStart="@mipmap/icon_user_login"
          android:drawablePadding="27pt"
          android:paddingStart="35pt"
          android:singleLine="true"
          android:background="@drawable/shape_bg_edittext_white"

          />

          <EditText
          android:id = "@+id/et_password_login"
          android:layout_width = "511pt"
          android:layout_height = "90pt"
          android:layout_below="@id/et_account_login"
          android:layout_marginTop="42pt"
          android:layout_centerHorizontal="true"
          android:hint="@string/account_password"
          android:textSize="30pt"
          android:drawableStart="@mipmap/icon_pasword_login"
          android:drawablePadding="27pt"
          android:paddingStart="35pt"
          android:inputType="textPassword"
          android:singleLine="true"
          android:background="@drawable/shape_bg_edittext_white"
          />

          <Button
          android:id = "@+id/btn_login"
          android:layout_width = "511pt"
          android:layout_height = "84pt"
          android:layout_below="@id/et_password_login"
          android:layout_marginTop="83pt"
          android:layout_centerHorizontal="true"
          android:text = "登录"
          android:textSize = "36pt"
          android:textColor="@color/white"
          android:background="@drawable/shape_button_gradient_fragment_login"
          />




</RelativeLayout>