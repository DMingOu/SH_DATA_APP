<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="#5EBEFF">
        <ImageView
            android:id="@+id/imv_back_two"
            android:layout_width="22pt"
            android:layout_height="31pt"
            android:layout_centerVertical="true"
            android:layout_marginStart="36pt"
            android:src="@mipmap/back"
            />
        <TextView
            android:id="@+id/tv_two_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_from_to"
            android:text="2020.04.04"
            android:textColor="#ffffff"
            android:textSize="36pt"/>
        <TextView
            android:id="@+id/tv_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=" - "
            android:textColor="#ffffff"
            android:textSize="36pt"/>
        <TextView
            android:id="@+id/tv_two_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_from_to"
            android:text="2020.04.05"
            android:textColor="#ffffff"
            android:textSize="36pt"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106pt"
        android:background="#5EBEFF">
        <Button
            android:id="@+id/btn_go_to_track_search"
            android:layout_width="721pt"
            android:layout_height="67pt"
            android:background="@drawable/bg_search_btn"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/search"
            android:paddingStart="22pt"
            android:drawablePadding="20pt"
            android:text="搜索学生轨迹"
            android:textColor="#9C9B9B"
            android:textSize="26pt"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_two_day_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>