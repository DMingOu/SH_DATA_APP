<!-- 形状 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle" >

    <solid android:color="#8CBCF9" />
    <!-- 边框 -->
    <!--
        <stroke
        android:width="1dip"
        android:color="#008577" />
    -->

    <!-- 内填充颜色 -->
    <padding
    android:color="#8CBCF9"
    android:bottom="10pt"
    android:left="10pt"
    android:right="10pt"
    android:top="10pt" />

    <!-- 圆角 -->
    <corners android:radius="12pt" />

